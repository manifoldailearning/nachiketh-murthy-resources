---
type Props = {
  variant?: 'default' | 'compact';
};

const { variant = 'default' } = Astro.props as Props;

const base = import.meta.env.BASE_URL;
const basePrefix = base === '/' ? '' : base.replace(/\/$/, '');

const headline = 'Ready to build production-grade Agentic AI?';
const calmLine = 'No urgency. Clarity first.';
const primaryHref = 'https://bootcamp.nachiketh.in';
const secondaryHref = 'https://community.nachiketh.in';
const aboutHref = `${basePrefix}/about/`;
---

<aside class:list={['cta', variant === 'compact' ? 'cta--compact' : 'cta--default']} aria-label="Call to action">
  <div class="cta__content">
    <h2 class="cta__title">{headline}</h2>
    <p class="cta__calm">{calmLine}</p>
  </div>
  <div class="cta__actions">
    <a class="cta__primary" href={primaryHref} rel="noopener noreferrer">
      Join the Bootcamp
    </a>
    <a class="cta__secondary" href={secondaryHref} rel="noopener noreferrer">
      Get free patterns + community
    </a>
  </div>
  <a class="cta__attrib" href={aboutHref}>By Nachiketh Murthy, Founder â€“ Manifold AI Learning</a>
</aside>

<style>
  .cta {
    display: grid;
    gap: 0.9rem;
    padding: 1.1rem;
    border: 1px solid var(--border);
    border-radius: 14px;
    background: linear-gradient(180deg, rgba(99, 102, 241, 0.10), rgba(255, 255, 255, 0.02));
  }
  .cta__title {
    margin: 0;
    font-size: 1.1rem;
    letter-spacing: -0.01em;
    line-height: 1.2;
  }
  .cta__calm {
    margin: 0.3rem 0 0 0;
    color: var(--muted);
    font-size: 0.95rem;
  }
  .cta__actions {
    display: flex;
    gap: 0.75rem;
    align-items: center;
    flex-wrap: wrap;
  }
  .cta__primary,
  .cta__secondary {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    border-radius: 12px;
    text-decoration: none;
    font-weight: 650;
    padding: 0.65rem 0.9rem;
    border: 1px solid var(--border);
    white-space: nowrap;
  }
  .cta__primary {
    border-color: rgba(79, 70, 229, 0.9);
    background: #4f46e5;
    color: #f9fafb;
    font-weight: 700;
    box-shadow: 0 10px 30px rgba(79, 70, 229, 0.4);
  }
  .cta__primary:hover {
    background: #6366f1;
    box-shadow: 0 10px 34px rgba(79, 70, 229, 0.5);
  }
  .cta__secondary {
    background: transparent;
    border-color: rgba(148, 163, 184, 0.6);
    color: var(--muted);
    font-weight: 600;
  }
  .cta__secondary:hover {
    background: rgba(148, 163, 184, 0.08);
  }
  .cta__attrib {
    color: var(--muted);
    text-decoration: none;
    font-size: 0.92rem;
    line-height: 1.3;
  }
  .cta__attrib:hover {
    color: var(--text);
    text-decoration: underline;
  }

  .cta--compact {
    padding: 0.85rem;
    border-radius: 12px;
    gap: 0.6rem;
  }
  .cta--compact .cta__title {
    font-size: 1rem;
  }
  .cta--compact .cta__calm {
    font-size: 0.9rem;
  }
  .cta--compact .cta__primary,
  .cta--compact .cta__secondary {
    padding: 0.55rem 0.75rem;
    border-radius: 11px;
    font-size: 0.95rem;
  }
  .cta--compact .cta__attrib {
    font-size: 0.88rem;
  }
  @media (max-width: 640px) {
    .cta__actions {
      flex-direction: column;
      align-items: stretch;
    }
    .cta__primary,
    .cta__secondary {
      width: 100%;
    }
  }
</style>

