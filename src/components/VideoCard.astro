---
import type { Video } from '../lib/videos';
import { truncate } from '../lib/videos';

type Props = {
  video: Video;
};

const { video } = Astro.props as Props;
const base = import.meta.env.BASE_URL;
const basePrefix = base === '/' ? '' : base.replace(/\/$/, '');
const href = `${basePrefix}/videos/${video.slug}/`;
---

<article
  class="card"
  data-slug={video.slug}
  data-title={video.title}
  data-desc={video.description}
  data-tags={video.tags.join(' ')}
>
  <header class="card__header">
    <h2 class="card__title">
      <a class="card__link" href={href}>{video.title}</a>
    </h2>
    <time class="card__meta" datetime={video.date}>{video.date}</time>
  </header>

  <p class="card__desc">{truncate(video.description, 160)}</p>

  <ul class="tags" aria-label="Tags">
    {video.tags.map((t) => (
      <li class="tag">{t}</li>
    ))}
  </ul>

  <div class="card__actions">
    <a class="button" href={href}>Open</a>
  </div>
</article>

<style>
  .card {
    padding: 1rem;
    border: 1px solid var(--border);
    border-radius: 14px;
    background: var(--panel);
    display: grid;
    gap: 0.75rem;
  }
  .card__header {
    display: flex;
    gap: 0.75rem;
    justify-content: space-between;
    align-items: baseline;
  }
  .card__title {
    margin: 0;
    font-size: 1.05rem;
    letter-spacing: -0.01em;
  }
  .card__link {
    color: inherit;
    text-decoration: none;
  }
  .card__link:hover {
    text-decoration: underline;
  }
  .card__meta {
    color: var(--muted);
    font-size: 0.9rem;
    white-space: nowrap;
  }
  .card__desc {
    margin: 0;
    color: var(--muted);
  }
  .tags {
    list-style: none;
    display: flex;
    flex-wrap: wrap;
    gap: 0.4rem;
    padding: 0;
    margin: 0;
  }
  .tag {
    font-size: 0.8rem;
    padding: 0.18rem 0.5rem;
    border-radius: 999px;
    border: 1px solid var(--border);
    background: rgba(148, 163, 184, 0.08);
    color: var(--text);
  }
  .card__actions {
    display: flex;
    justify-content: flex-end;
  }
  .button {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 0.55rem 0.8rem;
    border-radius: 12px;
    border: 1px solid var(--border);
    background: rgba(148, 163, 184, 0.1);
    color: var(--text);
    text-decoration: none;
    font-weight: 600;
  }
  .button:hover {
    background: rgba(148, 163, 184, 0.16);
  }
</style>

